.item{
 display: flex;
 flex-flow:row;
 height: 80rpx;
 margin: 10rpx 15rpx 0rpx 15rpx ;
 background-color: #fff;
 border: 0 solid rgba(0,0,0,0.1);
}
.item .item-img{
  height: 80%;
  width: 80rpx;
  padding-top: 10rpx;
  padding-left: 10rpx;
}
.item .item-name{
  flex: 2;
  padding-left: 20rpx;
  display:flex;
  align-items:center;
}
.item .item-time{
  flex:3;
  display:flex;
  align-items:center;
  padding-left: 20rpx;
}